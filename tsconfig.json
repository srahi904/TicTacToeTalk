// tic-tac-toe-online/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler", // or "node"
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".", // <--- Crucial for path aliases
    "paths": {
      "@/*": ["src/*"] // <--- Defines '@/' to point to 'src/'
    }
  },
  "include": [
    "src",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js"
  ], // ensure vite.config.ts is included if you use path module there
  "references": [{ "path": "./tsconfig.node.json" }]
}
